<Page
    x:Class="SerialArduino.Scenario3_Jetta"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SerialArduino"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">
    <Page.Resources>
        <!--<CollectionViewSource x:Name="MessageGroups"
                              x:Key="MessageGroups"
                              IsSourceGrouped="True"
                              Source="{x:Bind ViewModel.Messages}"/>-->
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          VerticalAlignment="Stretch">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
              VerticalAlignment="Stretch"
              Margin="12,20,12,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="CAN for Jetta" Style="{StaticResource SampleHeaderTextStyle}"/>
            </StackPanel>

            <Grid x:Name="LEDTempScrollViewer" 
                  VerticalAlignment="Stretch"
                  Grid.Row="1"                      
                  Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="400"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <controls:DataGrid x:Name="DataGridGroupd" 
                                   LoadingRowGroup="OnLoadingRowGroup" 
                                   RowGroupHeaderPropertyNameAlternative="ID"
                                   Loaded="OnDataGridLoaded"
                                   Margin="12"
                                   CanUserSortColumns="False"
                                   AutoGenerateColumns="False">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn 
            Header="COUNT" 
            Width="SizeToHeader"
            Binding="{Binding Count}" 
            FontSize="16" />
                        <controls:DataGridTextColumn 
            Header="DLC" 
            Width="SizeToHeader"
            Binding="{Binding DLC}" 
            FontSize="16" />
                        <controls:DataGridTextColumn 
            Header="DATA"
            Width="300"
            Binding="{Binding Data}" >
                            <controls:DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </controls:DataGridTextColumn.ElementStyle>
                            <controls:DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="Blue"/>
                                </Style>
                            </controls:DataGridTextColumn.EditingElementStyle>
                        </controls:DataGridTextColumn>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>


                <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1"
                            Margin="5,0">
                    <Button x:Name="BtnUpdateData"
                            HorizontalAlignment="Stretch"
                            Margin="10"
                            Content="Update"
                            Click="UpdateData_Click"/>
                    <TextBlock x:Name="TBBatteryLevel"
                               FontSize="24"
                               FontWeight="Bold">
                        <Run Text="Battery"/>
                        <Run x:Name="TBBatteryLevelValue" Text="0"/>
                        <Run Text="%"/>
                    </TextBlock>
                    <Button x:Name="BtnLFWD"
                            HorizontalAlignment="Stretch"
                            Margin="10"
                            Content="LFW Down"
                            Click="LFWDown_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,0,0,0" Grid.Row="1">
                    <Button x:Name="ClearButton" Content="Clear" Margin="10" 
                            Click="OnClearClick" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                    <Button x:Name="Sort" Content="Sort" VerticalAlignment="Bottom" Margin="10" Click="OnSort"/>
                    <Button x:Name="BtnStart" Content="Start tracking" Margin="10" Click="OnStartTracking" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                    <Button x:Name="BtnStop" Content="Stop tracking" Margin="10" Click="OnStopTracking" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                    <Button x:Name="BtnAddTestRow" Content="Add row" Margin="10" Click="BtnAddTestRow_Click" VerticalAlignment="Bottom"/>

                    <TextBox x:Name="TemperatureValue" Text="" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                </StackPanel>

                <ScrollViewer x:Name="SVConsole"
                              Background="DarkSlateGray"
                              VerticalAlignment="Stretch"
                              Grid.Row="2">
                    <RichTextBlock x:Name="RTBConsole"    
                                   
                              Margin="5,5"
                                       HorizontalAlignment="Left"                                       
                                       VerticalAlignment="Stretch"
                                       Width="500"/>
                </ScrollViewer>
                <StackPanel Orientation="Horizontal"
                                    Grid.Row="3">
                    <TextBox x:Name="TBCommand"
                                     Width="200"
                                     HorizontalAlignment="Stretch"
                                 />
                    <Button x:Name="BTNCommand"
                                    Content="Send"
                                    Click="BTNCommand_Click"
                                    />
                </StackPanel>

                <!--</StackPanel>-->

            </Grid>

            <!-- Status Block for providing messages to the user.  Use the
             NotifyUser() method to populate the message -->
            <TextBlock x:Name="StatusBlock" Grid.Row="4" Margin="5" Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Page>
